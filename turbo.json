{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "package": {
            "outputs": [
                "dist/**"
            ]
        },
        "dev": {
            "dependsOn": [
                "@fig/ui#package",
                "@fig/canvas#package",
                "@fig/types#package"
            ],
            "cache": false,
            "persistent": true
        },
        "format": {
            "cache": true
        }
    }
}